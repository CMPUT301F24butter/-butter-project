<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/entrant_event_poster"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@color/secondaryGreyColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/entrant_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entrant_event_title"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/entrant_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entrant_event_date"
                android:textColor="@color/primaryGreyColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/entrant_event_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryGreyColor"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>