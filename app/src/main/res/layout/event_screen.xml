<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/event_image2"
        android:layout_width="436dp"
        android:layout_height="351dp"
        android:contentDescription="@string/event_poster"
        android:src="@color/secondaryGreyColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_image2"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/event_title"
                android:textSize="40sp"
                android:layout_marginBottom="20dp" />

            <!-- This button can only be accessed by organizer -->
            <ImageButton
                android:id="@+id/organizer_opt_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/white"
                android:src="@drawable/setting"
                android:visibility="gone"
                />

            <!-- This button can only be accessed by admin -->
            <ImageButton
                android:id="@+id/new_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/organizer_opt_button"
                android:backgroundTint="@color/white"
                android:src="@drawable/admin_button"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/start_date"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:autofillHints=""
            android:text="Start date: "
            android:textStyle="bold"
            android:textSize="12sp"
            android:drawablePadding="8dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/end_date"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:autofillHints=""
            android:text="End Date: "
            android:textSize="12sp"
            android:textStyle="bold"
            android:drawablePadding="8dp"
            android:layout_marginBottom="15dp"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:paddingHorizontal="16dp">

            <EditText
                android:id="@+id/event_description"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:autofillHints=""
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:inputType="text"
                android:text=""
                android:textSize="12sp" />
        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/waiting_list_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/waiting_list_button"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/primaryPurpleColor"
            android:textColor="@color/white"
            app:cornerRadius="10dp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>